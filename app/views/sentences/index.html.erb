<h1>Sentences</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td><%= sentence.body %></td>
        <td>
          <%= link_to t('helpers.link.show'), sentence, class: "btn btn-default" %>
          <%= link_to t('helpers.link.edit'), edit_sentence_path(sentence), class: "btn btn-default" %>
          <%= link_to t('helpers.link.destroy'), sentence, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.link.new'), new_sentence_path, class: "btn btn-default" %>
